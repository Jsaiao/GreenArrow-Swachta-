<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDDE6DF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <include
        android:id="@+id/login_layout_Toolbar"
        layout="@layout/app_bar_layout"></include>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">


        <EditText
            android:id="@+id/userlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#6ef4f4f4"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:drawablePadding="78dp"
            android:ems="1"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:singleLine="false"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/userpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#6ef4f4f4"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:drawablePadding="78dp"
            android:ems="1"
            android:hint="......"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_login_two"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="Login in"
            android:textAllCaps="true"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text=" Or Login With"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.google.android.gms.common.SignInButton

                android:id="@+id/login_button1"
                style="?android:textAppearanceSmall"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:layout_anchor="@+id/login_form"
                app:layout_anchorGravity="bottom|center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=" Dont Have Account:"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>


        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_login_two"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="Register"
            android:textAllCaps="true"
            android:textColor="#fff" />


    </LinearLayout>


</LinearLayout>